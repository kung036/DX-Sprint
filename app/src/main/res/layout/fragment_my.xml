<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="#D9D9D9"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="38dp">

                    <ImageView
                        android:layout_width="40.25dp"
                        android:layout_height="51.75dp"
                        android:background="@drawable/vector_1"
                        android:layout_gravity="bottom|center_horizontal"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="#A4A4A4"
                    android:layout_gravity="bottom|right">
                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:background="@drawable/icons8_pencil_drawing"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="142dp"
                android:layout_height="30dp"
                android:background="@drawable/white_button_round"
                android:layout_marginTop="61dp"
                android:layout_marginLeft="21dp"
                android:text="로그인하기"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/white_button"
                android:text="참여"
                android:textSize="12dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/white_button"
                android:text="찜"
                android:textSize="12dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="3dp"
            app:cardBackgroundColor="#D9D9D9"
            android:layout_marginTop="86dp"
            android:layout_gravity="center_vertical|center_horizontal">

            <ImageView
                android:id="@+id/imageButton3"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/image_1" />

        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 바로 취향이 맞는\n 새로운 크루를 찾아볼까요?"
            android:textAlignment="center"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="14dp"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="143dp"
            android:layout_height="33dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/button_round_pink"
            android:drawableRight="@drawable/icons8_in_24"
            android:layout_marginTop="25dp"
            android:text="크루 둘러보기"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

