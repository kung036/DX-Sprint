<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="123dp"
        android:layout_height="123dp"
        android:background="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_crew"
        android:layout_width="130dp"
        android:layout_height="59dp"
        android:background="@drawable/white_button_round_bold"
        android:text="크루 만들기"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="55dp"
        android:layout_marginTop="41dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/participate_crew"
        android:layout_width="130dp"
        android:layout_height="59dp"
        android:background="@drawable/white_button_round_bold"
        android:text="크루 들어가기"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="41dp"/>

    <TextView
        android:id="@+id/tv_popular_crew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인기 페스티벌 크루"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/create_crew"
        app:layout_constraintStart_toStartOf="@id/create_crew"
        android:layout_marginTop="54dp"/>

    <!-- 갯수 정해진만큼 뷰로 표시하기 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popular_crew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_popular_crew"
        android:layout_marginTop="24dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>