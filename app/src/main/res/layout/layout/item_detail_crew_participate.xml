<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/tv_outside_stroke_black">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/crew_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">


            <ImageView
                android:id="@+id/festival_crew_image"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/crew_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.4"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/festival_crew_image"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/festival_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="축제 타이틀"
                    android:textColor="@color/black"
                    android:textSize="7sp" />

                <TextView
                    android:id="@+id/crew_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="크루이름"
                    android:textSize="13sp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/fluent_people_12_regular"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/crew_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="누구나 참여 가능"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/fluent_calendar_week_numbers_20_regular"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/crew_head_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/6명 참여"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/uil_calender"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/crew_activity_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="활동일"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="49dp"
                android:layout_height="47dp"
                app:layout_constraintStart_toEndOf="@id/crew_info"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#9B9B9B">

                <ImageButton
                    android:layout_width="33dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/icon_heart_white"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/crew_dibs_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4명"
                    android:textSize="8sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal|bottom"/>

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>