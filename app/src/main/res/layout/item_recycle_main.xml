<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view_layout">

    <ImageView
        android:id="@+id/main_view_image"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:src="@drawable/festival_image1"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/book_mark"
        android:layout_width="50dp"
        android:layout_height="34dp"
        android:src="@drawable/bookmark_red"
        app:layout_constraintStart_toStartOf="@id/main_view_image"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/d_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진행중"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/book_mark"
        app:layout_constraintTop_toTopOf="@id/book_mark"
        app:layout_constraintEnd_toEndOf="@id/book_mark"
        android:layout_marginEnd="3dp"/>

    <TextView
        android:id="@+id/main_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제5회 부산광역시배 전국 직장인 이스포츠 대회"
        android:textColor="@color/black"
        android:layout_marginBottom="35dp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/main_view_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="39dp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"/>

    <TextView
        android:id="@+id/main_view_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2022-07-08 ~ 2022-07-15 "
        android:layout_marginEnd="25dp"
        android:textColor="#909090"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/main_view_title"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/main_view_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부산 진구"
        android:textColor="#ACACAC"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/main_view_date"
        app:layout_constraintStart_toStartOf="@id/main_view_date"/>

    <ImageView
        android:id="@+id/dibs"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/main_view_place"
        android:src="@drawable/icons8_red_heart_48"
        app:layout_constraintEnd_toStartOf="@id/dibs_count"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/dibs_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        app:layout_constraintTop_toTopOf="@id/main_view_place"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>