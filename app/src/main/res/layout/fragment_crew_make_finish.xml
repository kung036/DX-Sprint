<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="146dp"
            android:layout_height="146dp"
            android:background="@drawable/ph_hands_clapping_duotone"
            android:layout_marginTop="226dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임이 만들어졌어요\n 같이 갈 크루원들을 만나볼까요?"
            android:layout_marginTop="29dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crew_make_button"
            android:layout_width="231dp"
            android:layout_height="47dp"
            android:background="@drawable/button_round_pink"
            android:layout_marginTop="29dp"
            android:layout_gravity="center"
            android:text="상세페이지로 이동"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:drawableRight="@drawable/icons8_in_24"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>