<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:background="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="기본정보를 입력해주세요"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="26dp"
            android:text="아이디 "
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/signup_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="babo5@naver.com"
            android:hint="abcdefg@naver.com"
            android:textColor="#737070"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="22dp"
            android:text="비밀번호"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/signup_pw"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:hint="영문, 숫자, 특수문자 포함 8~14자리"
            android:text="12ciej!!2"
            android:textColor="#737070"
            android:textSize="14sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="22dp"
            android:text="비밀번호 확인 "
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/signup_pw2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="12ciej!!2"
            android:hint="비밀번호를 다시 입력하세요."
            android:textColor="#737070"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="22dp"
            android:text="연락처 "
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/signup_phone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="010-1234-0033"
            android:hint="010-0000-0000"
            android:textColor="#737070" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="22dp"
            android:text="닉네임"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/signup_nickname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="Test3"
            android:hint="2~6글자"
            android:textColor="#737070" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_button"
            android:layout_width="215dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_round_dark"
            android:text="완료"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>
